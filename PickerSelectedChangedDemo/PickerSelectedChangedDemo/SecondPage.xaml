<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PickerSelectedChangedDemo.SecondPage"
             xmlns:local="clr-namespace:PickerSelectedChangedDemo">
    
    <ContentPage.Content>
<StackLayout>
    <Picker x:Name="ItemPickList"
            HeightRequest="60"/>
    <Picker x:Name="DataPickList"
            HeightRequest="60"
            ItemsSource="{Binding ListOfDataItems}"
            SelectedItem="{Binding SelectedDataItem}"
            SelectedIndexChanged="DataPickList_SelectedIndexChanged"/>
</StackLayout>
    </ContentPage.Content>
</ContentPage>